---
---
[
{%- for post in site.posts -%}
  {
    "title"       : "{{ post.title | escape }}",
    "description" : "{{ post.description | strip_html | strip_newlines | escape }}",
    "url"         : "{{ site.baseurl }}{{ post.url }}",
    "image"       : "{{ post.image }}",
    "tags"        : "{{ post.tags | join: ', ' }}",
    "date"        : "{{ post.date | date: site.date_format }}"
  } {%- unless forloop.last -%},{%- endunless -%}
{%- endfor -%}
]